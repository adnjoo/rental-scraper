generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Apartment {
  id         String      @id @default(uuid())
  name       String      @unique
  owner      String
  prices     Price[]
  area       String?
  locale     String?
  state      String?
  floorplans Floorplan[]
}

model Price {
  id          Int    @id @default(autoincrement())
  date        DateTime  @default(now()) @db.Date
  oneBedroom  String
  twoBedroom  String?
  apartment   Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId String
}

model Floorplan {
  id          String    @id @default(uuid())
  bedrooms    Int?
  bathrooms   Int?
  name        String?
  description String?
  sqft        Int?
  apartment   Apartment @relation(fields: [apartmentId], references: [id])
  apartmentId String
}
